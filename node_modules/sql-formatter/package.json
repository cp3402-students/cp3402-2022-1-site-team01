    "ts-loader": "^9.2.6",
    "typescript": "^4.3.5",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "test"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
